<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Autiva.App">
    <Application.Resources>
        <ResourceDictionary>

            <Color x:Key="Bg0">#0B0F17</Color>
            <Color x:Key="Bg1">#111827</Color>
            <Color x:Key="Card">#141B2A</Color>
            <Color x:Key="Stroke">#243044</Color>

            <Color x:Key="Text0">#E5E7EB</Color>
            <Color x:Key="Text1">#9CA3AF</Color>

            <Color x:Key="Blue">#3B82F6</Color>
            <Color x:Key="Green">#22C55E</Color>
            <Color x:Key="Amber">#F59E0B</Color>
            <Color x:Key="Violet">#8B5CF6</Color>
            <Color x:Key="Red">#EF4444</Color>

            <Style TargetType="Button">
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HeightRequest" Value="56"/>
                <Setter Property="TextColor" Value="{StaticResource Text0}"/>
                <Setter Property="BackgroundColor" Value="{StaticResource Card}"/>
            </Style>

            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HeightRequest" Value="56"/>
                <Setter Property="TextColor" Value="{StaticResource Text0}"/>
                <Setter Property="BackgroundColor" Value="{StaticResource Blue}"/>
            </Style>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource Text0}"/>
            </Style>

            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="#E5E7EB"/>
                <Setter Property="PlaceholderColor" Value="#9CA3AF"/>
                <Setter Property="BackgroundColor" Value="#0F172A"/>
                <Setter Property="FontSize" Value="15"/>
            </Style>

            <Style TargetType="Editor">
                <Setter Property="TextColor" Value="#E5E7EB"/>
                <Setter Property="PlaceholderColor" Value="#9CA3AF"/>
                <Setter Property="BackgroundColor" Value="#0F172A"/>
                <Setter Property="FontSize" Value="15"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>