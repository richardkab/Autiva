<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Autiva.Pages.AutivaHome"
             BackgroundColor="{StaticResource Bg0}"
             Title="Autiva">

    <Grid RowDefinitions="Auto,*" Padding="18" RowSpacing="14">

        <VerticalStackLayout Grid.Row="0" Spacing="4">
            <Label Text="AUTIVA" FontSize="28" FontAttributes="Bold" />
            <Label Text="Fahrzeuge &amp; Checkups" FontSize="13" TextColor="{StaticResource Text1}" />

            <HorizontalStackLayout Spacing="10">
                <Label Text="Fahrzeuge:" FontSize="12" TextColor="{StaticResource Text1}" />
                <Label x:Name="VehiclesCountLabel" Text="0" FontSize="12" FontAttributes="Bold" />
                <Label x:Name="LastUpdateLabel" Text="•" FontSize="12" TextColor="{StaticResource Text1}" />
            </HorizontalStackLayout>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,10,0,0">
                <Button Text="Fahrzeug hinzufügen" Grid.Column="0" Clicked="OnAddCar" />
                <Button Text="Protokolle / Export" Grid.Column="1" Clicked="OnOpenReports" />
            </Grid>
        </VerticalStackLayout>

        <RefreshView x:Name="VehiclesRefresh" Grid.Row="1" Refreshing="OnRefresh">
            <ScrollView>
                <VerticalStackLayout Spacing="12">

                    <Label x:Name="EmptyLabel"
                           IsVisible="False"
                           Text="Noch keine Fahrzeuge gespeichert. Tippe auf „Fahrzeug hinzufügen“."
                           FontSize="12" HorizontalOptions="Center" Margin="0,20"
                           TextColor="{StaticResource Text1}" />

                    <CollectionView x:Name="VehiclesCollection" SelectionMode="None" Margin="0,6,0,20">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Stroke="{StaticResource Stroke}"
                                        StrokeThickness="1"
                                        BackgroundColor="{StaticResource Card}"
                                        StrokeShape="RoundRectangle 18"
                                        Padding="14" Margin="0,0,0,10">

                                    <VerticalStackLayout Spacing="10">
                                        <VerticalStackLayout Spacing="2">
                                            <Label Text="{Binding MakeModel}" FontAttributes="Bold" FontSize="16" />
                                            <Label Text="{Binding LicensePlate}" FontSize="13" TextColor="{StaticResource Text1}" />

                                            <Label FontSize="12" TextColor="{StaticResource Text1}">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="Letzter Check: " />
                                                        <Span Text="{Binding LastCheckDate, StringFormat='{0:dd.MM.yyyy HH:mm}'}" />
                                                        <Span Text=" • Prüfer: " />
                                                        <Span Text="{Binding LastInspector}" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </VerticalStackLayout>

                                        <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                                            <Button Text="Check starten" Grid.Column="0"
                                                    CommandParameter="{Binding Id}"
                                                    Clicked="OnStartCheckForVehicle" />

                                            <Button Text="Details" Grid.Column="1"
                                                    BackgroundColor="{StaticResource Card}"
                                                    TextColor="{StaticResource Text1}"
                                                    CommandParameter="{Binding Id}"
                                                    Clicked="OnOpenVehicle" />
                                        </Grid>
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>
    </Grid>
</ContentPage>